extends ./includes/layout

block content
    .container(style="padding-bottom: 100px")
        .row
            table.table.table-hover.table-bordered(style="table-layout:fixed")
                thead
                    tr
                        th 分类名
                        th 录入时间
                        th 更新
                        th 删除
                tbody
                    each item in categories
                        tr
                            td #{item.name}
                            td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                            //-url上的..就是带着跳转链接的第一个子域名
                            td: a#xiugai(target="_blank", href="/category/update/#{item._id}") 修改
                            td
                                a.btn.btn-danger(href="/category/del?name=#{item.name}") 删除