extends ./includes/layout

block content
    .container(style="padding-bottom: 100px")
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 投放渠道
                        th objectId
                        th 渠道地址
                        th 微信号
                        th 录入时间
                tbody
                    each item in toufangs
                        tr
                            td #{item.title}
                            td #{item._id}
                            td #{item.url}
                            td #{item.wechat}
                            td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
            ul.pagination
                - for(var j = 0; j < totalPage; j ++) {
                    - if(currentPage == (j + 1)) {
                        li.active
                            span #{currentPage}
                    - } else {
                        li
                            a(href="/home?p=#{j}") #{j + 1}
                    - }
                - }
